<header>
  <h1>Dashboard</h1>
</header>

<%= form_for @text_shout do |form| %>
  <%= form.text_field :body, placeholder: "Shout text" %>
  <%= form.submit "Shout" %>
<% end %>

<%= form_for @photo_shout do |form| %>
  <%= form.file_field :image %>
  <%= form.submit "Shout Photo" %>
<% end %>

<%= form_for @video_shout do |form| %>
  <%= form.url_field :url, placeholder: "Video url" %>
  <%= form.submit "Shout Video" %>
<% end %>

<%= render @shouts %>
