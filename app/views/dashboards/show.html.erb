<header>
  <h1>Dashboard</h1>
</header>

<%= form_for @text_shout do |form| %>
  <%= form.text_field :body, placeholder: "Shout text" %>
  <%= form.submit "Shout" %>
<% end %>

<%= form_for @photo_shout do |form| %>
  <%= form.file_field :image %>
  <%= form.submit "Shout" %>
<% end %>

<% @shouts.each do |shout| %>
  <div><%= shout.content.body %> - <%= time_ago_in_words(shout.created_at) %> ago</div>
<% end %>
